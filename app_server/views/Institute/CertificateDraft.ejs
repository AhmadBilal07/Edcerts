<% include /partials/Header %>

</head>

<body>
  <% include /partials/navbar %>

  <% include /partials/CertificateCard %>
  <div id="recep">
    <form id="DegreeTemplate" class="col s10" method="POST" action="/DeleteDegreeTemplate">

      <table class="centered responsive-table">
        <thead>
          <tr>
            <th>Select</th>
            <th>Name</th>
            <th>Last Modified Date</th>
          </tr>
        </thead>


        <tbody>
          <% degree.forEach( function(degree) { %>
          <tr>
            <td> <label>
                <input class="check" type="checkbox" name="rec" value="<%= degree._id%>" />
                <span class="label-text"></span>
              </label>
            </td>
            <td><a href="/Institute/Certificate/<%= degree._id%>">
                <%= degree.Title %></a><%= degree._id%> </td>
            <td>
              <%=  (new Date(degree.DateofCreation)).toLocaleDateString()  %>
            </td>
          </tr>
          <% }) %>

        </tbody>
      </table>
      
    </form>

  </div>
  <div id="RecepOptions">
    <div><a id="delete" onclick="CallDelete()"><span>Delete</span></a></div>
  </div>

</body>
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
<script>
  $(document).ready(function () {
    $('.modal').modal();
  });
</script>
<script>
  $(document).ready(function () {
    $("#createbtn").click(function () {
      var favorite = [];
      $.each($("input[name='feature']:checked"), function () {
        favorite.push($(this).val());
      });
      $('#DegreeForm').submit();
    });
  });
</script>

<script>
  function CallDelete() {
    document.forms["DegreeTemplate"].submit();
  }
</script>




</html>